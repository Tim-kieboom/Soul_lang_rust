{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'soul_lang_rust' Compiler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run", 
                "test.soul",
                "-showOutput=SHOW_ALL",
                "-showTime=SHOW_ALL",
                "-prettyCppCode",
                "-tabCharLen=4"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'soul_lang_rust' Interpreter",
            "cargo": {
                "args": [
                    "build",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run", 
                "test.soul",
                "-isInterpreted",
                "-showOutput=SHOW_ALL",
                "-showTime=SHOW_ALL",
                "-prettyCppCode"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Throw_result executable 'soul_lang_rust' Compiler",
            "cargo": {
                "args": [
                    "build",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "throw_result,dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run", 
                "test.soul",
                "-showOutput=SHOW_ALL",
                "-showTime=SHOW_ALL",
                "-prettyCppCode"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'soul_lang_rust' compiler SHOW_ALL",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run", 
                "test.soul",
                "-showOutput=SHOW_ALL",
                "-showTime=SHOW_ALL",
                "-prettyCppCode"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'soul_lang_rust' compiler SHOW_NONE",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "run", 
                "test.soul",
                "-showOutput=SHOW_NONE",
                "-showTime=SHOW_ALL"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'soul_lang_rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}