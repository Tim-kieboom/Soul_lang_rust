    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable SINGLE FILE 'soul_lang_rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "build", 
                "soul_src\\main.soul",
                "--showOutput=SHOW_ALL",
                "--showTime=SHOW_ALL",
                "--tabCharLen=4",
                "--logMode=SHOW_LEVEL",
                "-prettyCppCode"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable SOURCE_FILE 'soul_lang_rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=soul_lang_rust",
                    "--package=soul_lang_rust",
                    "--features",
                    "dev_mode"
                ],
                "filter": {
                    "name": "soul_lang_rust",
                    "kind": "bin"
                }
            },
            "args": [
                "build", 
                "soul_src\\main.soul",
                "--showOutput=SHOW_ALL",
                "--showTime=SHOW_ALL",
                "--tabCharLen=4",
                "--logMode=SHOW_LEVEL",
                "--subtreePath=soul_src\\soul_subfiles.tree.bin",
                "-prettyCppCode"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
